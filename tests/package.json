{
  "name": "webkey-tests",
  "version": "1.0.0",
  "description": "Test suite for Webkey/Scanvia system",
  "main": "index.js",
  "scripts": {
    "test": "jest --verbose",
    "test:auth": "jest tests/api/auth.test.js --verbose",
    "test:tools": "jest tests/api/tools.test.js --verbose",
    "test:phishing": "jest tests/api/phishing.test.js --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "test",
    "api",
    "jest",
    "supertest"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 30000
  }
}
